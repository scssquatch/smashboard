= form_for @project, remote: true  do |f|
  .control-group
    = f.label :name, class: "control-label"
    .controls
      = f.text_field :name
  .control-group
    = f.label :offices, class: "control-label"
    .controls
      = f.select(:office_ids, Office.all.map {|o| [ o.name, o.id ] }, {}, {multiple: true})
  .control-group
    .controls
      = f.submit "Submit"
